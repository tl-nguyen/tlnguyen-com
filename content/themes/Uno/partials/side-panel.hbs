<header class="panel-cover {{#if post}}panel-cover--collapsed{{/if}}"
        {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="panel-main">

        <div class="panel-main__inner panel-inverted">
            <div class="panel-main__content">

                {{#if @blog.logo}}
                    <a href="{{@blog.url}}" title="link to homepage for {{@blog.title}}"><img src="{{@blog.logo}}"
                                                                                              width="80"
                                                                                              alt="{{@blog.title}} logo"
                                                                                              class="panel-cover__logo logo"/></a>
                {{/if}}
                <h1 class="panel-cover__title panel-title"><a href="{{@blog.url}}"
                                                              title="link to homepage for {{@blog.title}}">{{@blog.title}}</a>
                </h1>
                <span class="panel-cover__subtitle panel-subtitle">Notes And Thoughts</span>
                <hr class="panel-cover__divider"/>
                <p class="panel-cover__description">{{@blog.description}}</p>
                <hr class="panel-cover__divider panel-cover__divider--secondary"/>

                <div class="navigation-wrapper">

                    <nav class="cover-navigation cover-navigation--primary">
                        <ul class="navigation">
                            <li class="navigation__item"><a href="/#blog" title="link to {{@blog.title}} blog"
                                                            class="blog-button">Blog</a></li>
                            <li class="navigation__item"><a href="https://www.visualcv.com/tlnguyen" title="link to TL's Resume"
                                                            class="blog-button">Resume</a></li>
                            <li class="navigation__item"><a href="http://loveyourpix.com/users/tl-nguyen" title="link to TL's Gallery"
                                                            class="blog-button">Gallery</a></li>
                        </ul>
                    </nav>

                    {{> social}}

                </div>

            </div>

        </div>

        <div class="panel-cover--overlay"></div>
    </div>
</header>